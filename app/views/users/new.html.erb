
<div class= "signup-area container">

  <h1>Sign up via</h1>
  <br>
  <center>
    <a href="/auth/twitter" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
    <hr>
    <p>or</p>
  </center>
    <%= bootstrap_form_for @user, html: { id: 'new-user-again' } do |f| %>
    <%= f.text_field :username %>
    <%= f.email_field :email %>
    <%= f.password_field :password, class: "signup-password"%>
    <%= f.password_field :password_confirm, class: "signup-password-confirm"%>
    <div class="invalid-sign-up alert alert-danger" style='display:none'></div>
    <%= f.submit "Sign Up", class: "btn btn-primary" %>
  <% end %>
</div>
