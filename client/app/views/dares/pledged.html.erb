<% if @user == current_user %>
<h3>You've contributed to:</h3>
<% else %>
<h3><%= @user.username %> has contributed to:</h3>
<% end %>
<ul class="list-group">
<% @pledged_dares.each do |dare| %>
  <li class="list-group-item">
    <p><%= link_to dare.title, user_dare_path(dare.proposer, dare) %></p>
    <p><%= dare.description %></p>
  </li>
<% end %>
</ul>
