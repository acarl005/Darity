<section class="container">

  <h1><%= @user.username.capitalize %>'s Page</h1>

    <%= link_to "dare #{@user.username.capitalize}!", new_user_dare_path(current_user) + "?daree=#{@user.id}" %>
    <h3>Challenged Dares: (Dares <%= @user.username.capitalize %> has been challenged)</h3>
    <ul class="list-group">
      <% @challenged_dares.each do |dare| %>
        <li class="list-group-item">
          <p><%= link_to dare.title, user_dare_path(dare.proposer, dare) %></p>
          <p><%= dare.description %></p>
          <%= tweet_button message: 'tweet it!', user: @user, dare: dare %>
        </li>
      <% end %>
    </ul>

    <h3>Proposed Dares: (Dares <%= @user.username.capitalize %> has proposed)</h3>
    <ul class="list-group">
      <% @proposed_dares.each do |dare| %>
      <li class="list-group-item">
        <p><%= link_to dare.title, user_dare_path(dare.proposer, dare) %></p>
        <p><%= dare.description %></p>
      </li>
    <% end %>
  </ul>


    <h3>Pledged Dares: (Dares <%= @user.username.capitalize %> pay for)</h3>
    <ul class="list-group">
    <% @pledged_dares.each do |dare| %>
      <li class="list-group-item">
        <p><%= link_to dare.title, user_dare_path(dare.proposer, dare) %></p>
        <p><%= dare.description %></p>
      </li>
    <% end %>
    </ul>
</section>
